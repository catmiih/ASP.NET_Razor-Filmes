@page
@model ASP.NET_Razor_Filmes.Pages.Filmes.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    .titlename {
        background-color: transparent;
        border: 0;
        font-size: 2rem;
        height: 100%;
        font-weight: 400;
    }

    form > div {
        margin: 5% 0;
    }
</style>

<h1>Detalhes do filme: <input asp-for="Filme.Titulo" class="titlename" disabled /> </h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.DataLancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.DataLancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Filme?.ID">Editar filme</a> |
    <a asp-page="./Index">Voltar para a listagem</a>
</div>
